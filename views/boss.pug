extends layout

block content
  div(class='user_block')
    form(action='/')
      div(class='ind')
        input(type='submit' value='На домашнюю страничку' class='button_class')
    div
      each val in problems_list
        div(class='list_block')
          div(class='ind')
            span='ФИО: '
            span=val.fio
          div(class='ind')
            span='Телефон: '
            span=val.phone
          div(class='ind')
            span='Проблема: '
            span=val.problem

          form(action='/boss' method='POST')
            div(class='ind')
              select(name='select_name' class='input_style')
                each val in rabs
                  option=val
            div(class='ind')
              input(type='submit' value='Назначить на решение проблемы' class='button_class')
            div(class='ind')
              input(type='hidden' value=val.problem name='problem' class='input_style')
            div(class='ind')
              input(type='hidden' value=val.fio name='fio' class='input_style')






